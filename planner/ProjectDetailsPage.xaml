<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="planner.ProjectDetailsPage"
             Title="New Project">

    <StackLayout Padding="20" Spacing="10">
        <Entry x:Name="ProjectNameEntry" Placeholder="Project Name" />
        <Editor x:Name="ProjectDescriptionEditor" Placeholder="Project Description" AutoSize="TextChanges" HeightRequest="100" />
        <Button Text="Save Project" Clicked="OnSaveProjectClicked" />
    </StackLayout>
</ContentPage>
